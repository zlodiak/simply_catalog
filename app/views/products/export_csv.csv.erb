<%- headers = [
  'id', 
  'created_at', 
  'updated_at', 
  'title', 
  'price', 
  'weight', 
  'color_id', 
  'is_catalog', 
  'parent_id', 
  'lft', 
  'rgt', 
  'description'
] -%>
<%= CSV.generate_line headers %>
<%- @products.each do |product| -%>
  <%= CSV.generate_line([
    product.id, 
    product.created_at, 
    product.updated_at, 
    product.title, 
    product.price, 
    product.weight, 
    product.color_id, 
    product.is_catalog, 
    product.parent_id, 
    product.lft, 
    product.rgt, 
    product.description
  ]) %>
<%- end -%>